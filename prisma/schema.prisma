generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  name     String  @default("Admin")
  email    String  @id
  password String
  isMaster Boolean @default(false)
}

model Exhibit {
  priority  Int     @default(0)
  id        Int     @id @default(autoincrement())
  title     String  @unique
  thumbnail String
  summary   Json
  published Boolean
  cards     Card[]
}

model Card {
  id          Int     @id @default(autoincrement())
  media       String
  description Json
  exhibitId   Int
  exhibit     Exhibit @relation(fields: [exhibitId], references: [id])

  @@index([exhibitId])
}

model Image {
  url String @id
}
