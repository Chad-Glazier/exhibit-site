generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  name     String  @default("Admin")
  email    String  @id
  password String
  isMaster Boolean @default(false)
}

model Exhibit {
  id        Int     @id @default(autoincrement())
  title     String  @unique
  thumbnail String
  summary   String
  published Boolean
  cards     Card[]
}

model Card {
  id          Int     @id @default(autoincrement())
  media       String
  description String
  exhibitId   Int
  exhibit     Exhibit @relation(fields: [exhibitId], references: [id])
}

model Image {
  url String @id
}
